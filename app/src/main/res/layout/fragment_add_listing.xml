<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:id="@+id/signup_welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="25dp"
        android:text="Listing Draft for:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/tahoma"/>

    <TextView
        android:id="@+id/signup_email_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of listing:"
        android:textSize="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/tahoma"/>

    <EditText
        android:id="@+id/signup_email_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input name here"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:fontFamily="@font/tahoma"/>

    <TextView
        android:id="@+id/signup_password_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/tahoma"/>

    <EditText
        android:id="@+id/signup_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="inpute description here"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:fontFamily="@font/tahoma"/>

    <TextView
        android:id="@+id/signup_confirm_password_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/tahoma"/>

    <EditText
        android:id="@+id/signup_confirm_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input price here"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:fontFamily="@font/tahoma"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Create Listing"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/tahoma"/>


</LinearLayout>
