<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <ImageView
            android:id="@+id/detail_scrollview_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/detail_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iPhone 13 Pro Max "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/tahoma"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Rating:"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65">
                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/detail_ratingbar"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Seller:"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"/>
                <TextView
                    android:id="@+id/detail_seller_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:text="Shuo Niu"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Category:"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"/>
                <TextView
                    android:id="@+id/detail_product_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:text="Phone"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Color:"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"/>
                <TextView
                    android:id="@+id/detail_product_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:text="Red"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Price:"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd" />
                <TextView
                    android:id="@+id/detail_product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:text="$1500"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"/>
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:paddingLeft="10dp"
                    android:text="Description:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"/>

                <TextView
                    android:id="@+id/detail_product_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:paddingLeft="10dp"
                    android:text="Phone looks clean"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tahoma"
                    android:textSize="25dp"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/detail_contact_button"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="contact"
                android:background="@color/black"
                android:textColor="@color/white"
                android:fontFamily="@font/tahoma"
                android:textSize="25dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/detail_delete_button"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="Delete"
                android:background="@color/black"
                android:textColor="@color/white"
                android:fontFamily="@font/tahoma"
                android:textSize="25dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>