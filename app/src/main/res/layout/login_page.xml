<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Back to CougarsGo!"
            android:textColor="@color/black"
            android:fontFamily="@font/tahoma"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/login_email_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email:"
            android:textSize="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="25dp"
            android:paddingLeft="17dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/tahoma"/>

        <EditText
            android:id="@+id/login_email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="input email here"
            android:layout_marginBottom="25dp"
            android:layout_marginHorizontal="25dp"
            android:paddingLeft="17dp"
            android:fontFamily="@font/tahoma"
            android:textSize="25dp"
            android:contentDescription="input email here"/>

        <TextView
            android:id="@+id/login_password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="password:"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="25dp"
            android:paddingLeft="17dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/tahoma"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/login_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="input password here"
            android:layout_marginBottom="25dp"
            android:layout_marginHorizontal="25dp"
            android:paddingLeft="17dp"
            android:fontFamily="@font/tahoma"
            android:textSize="25dp"
            android:contentDescription="input password here"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login"
            android:layout_marginBottom="25dp"
            android:layout_marginHorizontal="25dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:fontFamily="@font/tahoma"
            android:textSize="25dp"/>

    </LinearLayout>
</ScrollView>