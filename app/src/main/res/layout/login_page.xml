<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/login_increase_text_size"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="INCREASE TEXT SIZE" />

    <Button
        android:id="@+id/login_decrease_text_size"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="DECREASE TEXT SIZE"/>

    <TextView
        android:id="@+id/login_welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="25dp"
        android:text="Welcome Back to CougarsGo!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/login_email_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email:"
        android:textSize="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/login_email_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input email here"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"/>

    <TextView
        android:id="@+id/login_password_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="password:"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/login_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input password here"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"/>

</LinearLayout>