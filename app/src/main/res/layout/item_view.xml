<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="35dp"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TableRow>
                    <ImageView
                        android:id="@+id/item_view_image"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="300dp"
                        android:paddingTop="25dp"
                        android:src="@drawable/c07955070"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.37"
                        android:layout_height="match_parent"
                        android:text="Name:"
                        android:textSize="25dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/item_view_name"
                        android:layout_width="0dp"
                        android:layout_weight="0.63"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="iPhone 13 Pro Max"
                        android:textSize="30dp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.37"
                        android:layout_height="match_parent"
                        android:text="Condition:"
                        android:textSize="25dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/item_view_description"
                        android:layout_width="0dp"
                        android:layout_weight="0.63"
                        android:maxWidth="230dp"
                        android:layout_height="wrap_content"
                        android:text="iPhone 13 Pro Max"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.37"
                        android:layout_height="match_parent"
                        android:text="Color:"
                        android:textSize="25dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/item_view_color"
                        android:layout_width="0dp"
                        android:layout_weight="0.63"
                        android:layout_height="wrap_content"
                        android:maxWidth="230dp"
                        android:text="iPhone 13 Pro Max"
                        android:textSize="30dp"
                        android:textColor="@color/black"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.37"
                        android:layout_height="match_parent"
                        android:text="Price: "
                        android:paddingLeft="10dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        />
                    <TextView
                        android:id="@+id/item_view_price"
                        android:layout_width="0dp"
                        android:layout_weight="0.63"
                        android:layout_height="wrap_content"
                        android:maxWidth="230dp"
                        android:textColor="@color/black"
                        android:text="$1500"
                        android:textSize="30dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>