<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/signup_welcome_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="25dp"
        android:text="Welcome to CougarsGo!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/signup_email_textview"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="email:"
        android:textSize="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:textStyle="bold"/>
    
    <EditText
        android:id="@+id/signup_email_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="email"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"/>

    <TextView
        android:id="@+id/signup_password_textview"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="password:"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/signup_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="password"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"/>

    <TextView
        android:id="@+id/signup_confirm_password_textview"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="confirm password:"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/signup_confirm_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="confirm password"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"/>
    
    <Button
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"/>

</LinearLayout>