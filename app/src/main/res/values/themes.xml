<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CougarsGo" parent="Theme.AppCompat.Light"  >
        <!-- Primary brand color. -->
        <item name="colorPrimary">#58EE69</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        <item name="android:itemTextAppearance">@style/customText</item>
        <item name="android:actionMenuTextAppearance">@style/customTitle</item>

    </style>
    
    <style name="customText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize"> 37dp</item>
    </style>

    <style name="customTitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">40dp</item>
    </style>

</resources>
